{
  "name": "@websocket-relay/backend",
  "version": "1.4.1",
  "description": "Backend API and WebSocket server for WebSocket Relay Platform",
  "type": "module",
  "main": "src/server.ts",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "ws-server": "tsx src/ws-server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:performance": "node tests/performance/custom-perf-test.mjs",
    "test:performance:artillery": "pnpm run test:perf:all",
    "test:perf:all": "pnpm run test:perf:single && pnpm run test:perf:multi && pnpm run test:perf:throughput",
    "test:perf:single": "artillery run tests/performance/scenarios/single-endpoint-multi-connection.yml --output tests/performance/reports/single-endpoint.json",
    "test:perf:multi": "artillery run tests/performance/scenarios/multi-endpoint-concurrent.yml --output tests/performance/reports/multi-endpoint.json",
    "test:perf:throughput": "artillery run tests/performance/scenarios/high-throughput.yml --output tests/performance/reports/high-throughput.json",
    "test:perf:long": "artillery run tests/performance/scenarios/long-connection-stability.yml --output tests/performance/reports/long-connection.json",
    "test:perf:report": "artillery report tests/performance/reports/single-endpoint.json && artillery report tests/performance/reports/multi-endpoint.json && artillery report tests/performance/reports/high-throughput.json",
    "lint": "eslint . --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "@websocket-relay/shared": "workspace:*",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "date-fns": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "artillery": "2.0.26",
    "artillery-plugin-metrics-by-endpoint": "^1.20.0",
    "jest": "^29.7.0",
    "prisma": "^5.8.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
